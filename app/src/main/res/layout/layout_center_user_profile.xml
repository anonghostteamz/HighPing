<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <androidx.core.widget.NestedScrollView
        android:id="@+id/ncv_customer_details"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >
        <LinearLayout
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/ll_user_profile"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/profile_section"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/white"
                android:padding="20dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="126dp"
                    android:layout_height="126dp"
                    android:id="@+id/iv_profile"
                    android:background="@drawable/pubg_sample_logo"
                    android:layout_marginTop="20dp"
                    app:civ_border_color="@color/gray_bright"
                    app:civ_border_width="2dp"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="32dp"
                    android:orientation="vertical"
                    android:layout_toEndOf="@+id/iv_profile"
                    android:layout_alignParentBottom="true">
                    <TextView
                        android:id="@+id/txt_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sharad Pareek"
                        android:textSize="15sp"
                        android:textColor="@color/main_second_title"/>
                    <TextView
                        android:id="@+id/textUsername"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Warlord Logan"
                        android:layout_marginTop="10dp"
                        android:textSize="15sp"
                        android:textColor="@color/main_second_title"/>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        >
                        <TextView
                            android:id="@+id/val_balance"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Balance"
                            android:textSize="15sp"
                            android:textColor="@color/main_second_title"/>
                    </RelativeLayout>



                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/grey_border_bottom"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp">
                    <TextView
                        android:id="@+id/txtUsername"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Username"
                        android:textSize="18sp"
                        android:textColor="@color/black" />
                    <TextView
                        android:id="@+id/tv_user_name"
                        android:layout_below="@+id/txtUsername"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:maxLength="25"
                        android:textSize="16sp"
                        android:hint="Username"
                        android:textColor="@color/grey"
                        android:textColorHint="@color/grey"
                        />

                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</merge>