<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/postImageLayout"
    android:background="@color/white"
    android:padding="5dp"
    >
    <ImageView
        android:background="@drawable/frame_circular_edge"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/wallpaper"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/pubg_sample_wallpaper"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="10dp">
            <ImageView
                android:id="@+id/sample"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/chicken"
                android:layout_centerVertical="true"
                />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/sample"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                >
                <TextView
                    android:id="@+id/match_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Match #87"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/match_time"
                    android:layout_below="@+id/match_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time: 10-03-2020 at 10:05 pm"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>

            </RelativeLayout>



        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:layout_gravity="bottom">

            <Button
                android:id="@+id/watch_result"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:visibility="visible"
                android:text="Watch Result"
                android:padding="5dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@color/twitch_purple"
                />

        </RelativeLayout>
    </FrameLayout>
</FrameLayout>