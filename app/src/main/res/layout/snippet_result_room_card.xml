<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/postImageLayout"
    android:background="@color/white"
    android:padding="5dp"
    >
    <ImageView
        android:background="@drawable/frame_circular_edge"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:background="@drawable/grey_border_bottom">
            <ImageView
                android:id="@+id/sample"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/pubg_sample_logo"
                android:layout_centerVertical="true"
                />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/sample"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                >
                <TextView
                    android:id="@+id/match_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Match #87"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/main_head_title"/>
                <TextView
                    android:id="@+id/match_time"
                    android:layout_below="@+id/match_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time: 10-03-2020 at 10:05 pm"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/grey"/>

            </RelativeLayout>



        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_margin="10dp">
            <RelativeLayout
                android:id="@+id/match_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/ll_prize_n_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/text_win_prize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="WIN PRIZE"
                        android:textSize="12sp"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/grey"/>
                    <TextView
                        android:id="@+id/val_win_prize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100"
                        android:layout_gravity="center"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/main_head_title"/>
                    <TextView
                        android:id="@+id/text_match_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TYPE"
                        android:layout_gravity="center"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginTop="15dp"
                        android:textColor="@color/grey"/>
                    <TextView
                        android:id="@+id/val_match_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="SQUAD"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/main_head_title"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_kill_n_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:id="@+id/text_per_kill"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PER KILL"
                        android:textSize="12sp"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textColor="@color/grey"/>
                    <TextView
                        android:id="@+id/val_per_kill"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:layout_gravity="center"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/main_head_title"/>
                    <TextView
                        android:id="@+id/text_version"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="VERSION"
                        android:layout_gravity="center"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginTop="15dp"
                        android:textColor="@color/grey"/>
                    <TextView
                        android:id="@+id/val_version"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="1.0"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/main_head_title"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_fee_n_map"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:id="@+id/text_entry_fee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ENTRY FEE"
                        android:textSize="12sp"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textColor="@color/grey"/>
                    <TextView
                        android:id="@+id/val_entry_fee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FREE"
                        android:layout_gravity="center"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/twitch_purple"/>
                    <TextView
                        android:id="@+id/text_map"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MAP"
                        android:layout_gravity="center"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginTop="15dp"
                        android:textColor="@color/grey"/>
                    <TextView
                        android:id="@+id/val_map"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Sanhok"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/main_head_title"/>
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/match_details"
                android:layout_marginTop="20dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:id="@+id/text_spots_left"
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:text="Watch Match"
                        android:textSize="15sp"
                        android:background="@color/twitch_purple"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/white"/>

                </RelativeLayout>
                <Button
                    android:id="@+id/btn_join"
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:visibility="visible"
                    android:text="Joinned"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:background="@color/grey"
                    />
                <Button
                    android:id="@+id/btn_already_joinned"
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:visibility="invisible"
                    android:text="Not Join"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/main_head_title"
                    android:background="@color/grey"
                    />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>