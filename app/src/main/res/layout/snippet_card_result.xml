<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_below="@+id/tv_chicken"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    >
    <TextView
        android:id="@+id/val_hashtag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="14sp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/cute_black"
        android:layout_centerVertical="true"
        />
    <TextView
        android:id="@+id/val_player_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sharad Pareek"
        android:textSize="14sp"
        android:layout_toRightOf="@+id/val_hashtag"
        android:layout_marginLeft="40dp"
        android:textColor="@color/cute_black"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/val_kills"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/val_winning"
        android:text="2"
        android:textSize="14sp"
        android:layout_marginRight="40dp"
        android:textColor="@color/cute_black"
        android:layout_centerVertical="true"
        />
    <TextView
        android:id="@+id/val_winning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="10rs"
        android:textSize="14sp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/cute_black"
        android:layout_centerVertical="true"
        />
</RelativeLayout>